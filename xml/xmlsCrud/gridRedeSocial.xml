<?xml version="1.0" encoding="UTF-8"?>
<grid titulo="RedeSocial" classe="CrudRedeSocial" direito="186">
	<header>
		<titulo type="STRING" ordena="id_rede_social">#Id</titulo>
		<titulo type="STRING" ordena="descricao">Título</titulo>
		<titulo type="STRING" ordena="link">Link</titulo>
		<titulo type="STRING" ordena="status">status</titulo>
		<titulo type="none" actionEdit="a=formAlt" actionStatus="a=status" actionDelete="a=deleta">Ações</titulo>
	</header>
	<query>
		<campos>
			 id_rede_social,descricao,link,if(status='S','Ativo','Inativo'), id_rede_social
		</campos>
		<from>
			fwk_rede_social
		</from>
		<whereBusca>
			(id_rede_social LIKE '%#BUSCA#%' OR descricao LIKE '%#BUSCA#%' OR link LIKE '%#BUSCA#%') 
		</whereBusca>
		<orderBy>descricao</orderBy>
	</query>
	<buttons>
		<campos name="Cadastrar" value="Cadastrar" type="button" goto="a=formCad" class="btnReport btn" />
		<campos name="Cancelar" value="Cancelar" type="button" goto="?" class="btnReport btn" />
	</buttons>
	<filtro>
		<campos type="text" name="id_rede_social" id="id_rede_social" label="#Id"
		title="#Id" class="larguraFormMeia" campoQuery="id_rede_social" />

		<campos type="text" name="descricao" id="descricao" label="Descrição"
		title="Descrição" class="larguraFormMeia" campoQuery="descricao" />

		<campos type="text" name="link" id="link" label="Link"
		title="Link" class="larguraFormMeia" campoQuery="link" />
	</filtro>
</grid>